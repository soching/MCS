@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .card {
            height: 200px; /* Set the height you need */
        }
    </style>
</head>
<body class="bg-light">

    <div class="container py-5">
        <div class="row g-4">
            <!-- g-4 adds spacing between the cards -->
            <div class="col-md-6">
                <!-- Two cards per row -->
                <div class="card text-center shadow-sm">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <!-- Flexbox to center content -->
                        <p class="card-text fw-bold">Purchase Request</p>
                        <p class="card-text">Request #1</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card text-center shadow-sm">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <p class="card-text fw-bold">Purchase Order</p>
                        <p class="card-text">Request #2</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card text-center shadow-sm">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <p class="card-text fw-bold">Purchase Request</p>
                        <p class="card-text">Request #3</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card text-center shadow-sm">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <p class="card-text fw-bold">House Type</p>
                        <p class="card-text">Request #4</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>



