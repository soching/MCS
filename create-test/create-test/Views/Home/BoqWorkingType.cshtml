    <header class="container my-3" style="border: 1px solid gray;">
        <form>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="searchInput" class="form-label"><b>Search</b></label>
                    <input type="text" class="form-control" id="searchInput" placeholder="Enter your text">
                </div>
                <div class="col-md-6">
                    <label for="itemsGroup" class="form-label"><b>Items Group</b></label>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="brand" class="form-label"><b>Zone</b></label>
                    <select class="form-select" id="brand">
                        <zion selected>Select zone>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label for="itemType" class="form-label"><b>Block</b></label>
                    <select class="form-select" id="itemType">
                        <option selected>Select block</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="materialType" class="form-label"><b>Building</b></label>
                    <select class="form-select" id="materialType">
                        <option selected>Select building</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label for="status" class="form-label"><b>House Type</b></label>
                    <select class="form-select" id="status">
                        <option selected>Select house type</option>
                        <option value="1">Active</option>
                        <option value="2">Disable</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label for="status" class="form-label"><b>House</b></label>
                    <select class="form-select" id="status">
                        <option selected>Select house</option>
                        <option value="1">Active</option>
                        <option value="2">Disable</option>
                    </select>
                </div>     
                <div class="col-md-6">
                    <label for="status" class="form-label"><b>Working Type</b></label>
                    <select class="form-select" id="status">
                        <option selected>Select working type</option>
                        <option value="1">Active</option>
                        <option value="2">Disable</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label for="status" class="form-label"><b>Status</b></label>
                    <select class="form-select" id="status">
                        <option selected>Select Status</option>
                        <option value="1">Active</option>
                        <option value="2">Disable</option>
                    </select>
                </div>
            </div>
            <button type="button" class="btn btn-primary">Search</button>
        </form>
    </header>

    <!--Add model -->
    <!-- Modal Add New-->
    <div class="modal fade" id="addNewModal" tabindex="-1" aria-labelledby="addNewModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header" style="background-color: black;">
                    <h5 class="modal-title" id="addNewModalLabel" style="color: white;">Upload Document</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <!-- Modal Body with Form -->
                <div class="modal-body">
                    <p>
                        The first line in downloaded csv file should remain as it is. Please do not change the order of columns.
                        The correct column order is () & you must follow this. Please make sure the csv file is UTF-8 encoded and not saved with byte order mark (BOM).
                    </p>
                    <form>
                        <div class="row mb-3">
                            <!-- First row: BOQ No., Zone, and Block -->
                            <div class="col-md-4">
                                <label for="boqNo" class="form-label"><b>BOQ No.</b></label>
                                <input type="text" class="form-control" id="boqNo" placeholder="Enter BOQ number">
                            </div>
                            <div class="col-md-4">
                                <label for="zone" class="form-label"><b>Zone</b></label>
                                <select class="form-select" id="zone">
                                    <option selected>Select zone</option>
                                    <option value="1">One</option>
                                    <option value="2">Two</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="block" class="form-label"><b>Block</b></label>
                                <select class="form-select" id="block">
                                    <option selected>Select block</option>
                                    <option value="1">One</option>
                                    <option value="2">Two</option>
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <!-- Second row: Building, Street, and House Type -->
                            <div class="col-md-4">
                                <label for="building" class="form-label"><b>Building</b></label>
                                <select class="form-select" id="building">
                                    <option selected>Select building</option>
                                    <option value="1">One</option>
                                    <option value="2">Two</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="street" class="form-label"><b>Street</b></label>
                                <select class="form-select" id="street">
                                    <option selected>Select street</option>
                                    <option value="1">One</option>
                                    <option value="2">Two</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="houseType" class="form-label"><b>House Type</b></label>
                                <select class="form-select" id="houseType">
                                    <option selected>Select house type</option>
                                    <option value="1">One</option>
                                    <option value="2">Two</option>
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <!-- Third row: Search and File Upload -->
                            <div class="col-md-6">
                                <label for="search" class="form-label"><b>House No.</b></label>
                                <input type="text" class="form-control" id="search" placeholder="Enter search term">
                            </div>
                            <div class="col-md-6">
                                <label for="fileUpload" class="form-label"><b>DocumentFile</b></label>
                                <input type="file" class="form-control" id="fileUpload" />
                            </div>
                        </div>

                        <div class="row mb-3">                            
                            <div class="col-md-4">
                                <label for="workingType" class="form-label"><b>Working Type</b></label>
                                <select class="form-select" id="workingType">
                                    <option selected>Select</option>
                                    <option value="1">One</option>
                                    <option value="2">Two</option>
                                </select>
                            </div>
                            <div class="col-md-4 text-end">
                                <label class="form-label">&nbsp;</label> <!-- For spacing consistency -->
                                <button type="button" class="btn btn-primary d-block">DownloadExample</button>
                            </div>
                        </div>

                        <!-- Close Button -->
                        <div class="d-flex justify-content-end">
                            <button type="button" class="btn btn-primary me-2" data-bs-dismiss="modal">Upload</button>
                            <button type="button" class="btn btn-danger me-2" data-bs-dismiss="modal">Cancel</button>
                        </div>                                              
                    </form>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
