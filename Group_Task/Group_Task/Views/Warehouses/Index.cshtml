@model IEnumerable<Group_Task.Models.Warehouse>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>NameWarehouse</th>
            <th>UseControl</th>
            <th>TelPhone</th>
            <th>Address</th>    
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameWarehouse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UseControl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdWarehouse">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdWarehouse">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdWarehouse">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
