@model IPagedList<Group_Task.Models.BoqWorkingType>
@using X.PagedList;
@using X.PagedList.Mvc.Core;
@using X.PagedList.Mvc.Core.Common;

@{
    ViewData["Title"] = "Index";
}


<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">BOQ Listereet</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDarkDropdown" aria-controls="navbarNavDarkDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDarkDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Action
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLink">
                            <a class="nav-link text-white" asp-area="" asp-controller="BoqWorkingTypes" asp-action="AddNewBoq">Add New</a>
                            <li><a class="dropdown-item" href="#">Download</a></li>
                            <li><a class="dropdown-item" href="#">Download Example</a></li>
                            <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#addNewModal">Upload</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <header class="container my-3" style="border: 1px solid gray; padding: 15px;">
        <form>
            <!-- Row 1: Search, Items Group, and Zone -->
            <div class="row mb-3">
                <div class="col-md-4">
                    <label for="searchInput" class="form-label"><b>Search</b></label>
                    <input type="text" class="form-control" id="searchInput" placeholder="Enter your text">
                </div>
                <div class="col-md-4">
                    <label for="itemsGroup" class="form-label"><b>Items Group</b></label>
                    <select class="form-select" id="itemsGroup">
                        <option selected>Select group</option>
                        <option value="1">Group 1</option>
                        <option value="2">Group 2</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="zone" class="form-label"><b>Zone</b></label>
                    <select class="form-select" id="zone">
                        <option selected>Select zone</option>
                        <option value="1">Zone 1</option>
                        <option value="2">Zone 2</option>
                    </select>
                </div>
            </div>

            <!-- Row 2: Block, Building, and House Type -->
            <div class="row mb-3">
                <div class="col-md-4">
                    <label for="block" class="form-label"><b>Block</b></label>
                    <select class="form-select" id="block">
                        <option selected>Select block</option>
                        <option value="1">Block 1</option>
                        <option value="2">Block 2</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="building" class="form-label"><b>Building</b></label>
                    <select class="form-select" id="building">
                        <option selected>Select building</option>
                        <option value="1">Building 1</option>
                        <option value="2">Building 2</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="houseType" class="form-label"><b>House Type</b></label>
                    <select class="form-select" id="houseType">
                        <option selected>Select house type</option>
                        <option value="1">Type 1</option>
                        <option value="2">Type 2</option>
                    </select>
                </div>
            </div>

            <!-- Row 3: House, Working Type, and Status -->
            <div class="row mb-3">
                <div class="col-md-4">
                    <label for="house" class="form-label"><b>House</b></label>
                    <select class="form-select" id="house">
                        <option selected>Select house</option>
                        <option value="1">House 1</option>
                        <option value="2">House 2</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="workingType" class="form-label"><b>Working Type</b></label>
                    <select class="form-select" id="workingType">
                        <option selected>Select working type</option>
                        <option value="1">Type 1</option>
                        <option value="2">Type 2</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="status" class="form-label"><b>Status</b></label>
                    <select class="form-select" id="status">
                        <option selected>Select status</option>
                        <option value="1">Active</option>
                        <option value="2">Disabled</option>
                    </select>
                </div>
            </div>

            <!-- Search Button -->
            <button type="button" class="btn btn-primary">Search</button>
        </form>

    </header>


    <!--Add model -->
    <!-- Modal Add New-->
    <div class="modal fade" id="addNewModal" tabindex="-1" aria-labelledby="addNewModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header" style="background-color: black;">
                    <h5 class="modal-title" id="addNewModalLabel" style="color: white;">Upload Document</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <!-- Modal Body with Form -->
                <div class="modal-body">
                    <p>
                        The first line in downloaded csv file should remain as it is. Please do not change the order of columns.
                        The correct column order is () & you must follow this. Please make sure the csv file is UTF-8 encoded and not saved with byte order mark (BOM).
                    </p>
                    <form>
                        <div class="row mb-3">
                            <!-- First row: BOQ No., Zone, and Block -->
                            <div class="col-md-4">
                                <label for="boqNo" class="form-label"><b>BOQ No.</b></label>
                                <input type="text" class="form-control" id="boqNo" placeholder="Enter BOQ number">
                            </div>
                            <div class="col-md-4">
                                <label for="zone" class="form-label"><b>Zone</b></label>
                                <select class="form-select" id="zone">
                                    <option selected>Select zone</option>
                                    <option value="1">One</option>
                                    <option value="2">Two</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="block" class="form-label"><b>Block</b></label>
                                <select class="form-select" id="block">
                                    <option selected>Select block</option>
                                    <option value="1">One</option>
                                    <option value="2">Two</option>
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <!-- Second row: Building, Street, and House Type -->
                            <div class="col-md-4">
                                <label for="building" class="form-label"><b>Building</b></label>
                                <select class="form-select" id="building">
                                    <option selected>Select building</option>
                                    <option value="1">One</option>
                                    <option value="2">Two</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="street" class="form-label"><b>Street</b></label>
                                <select class="form-select" id="street">
                                    <option selected>Select street</option>
                                    <option value="1">One</option>
                                    <option value="2">Two</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="houseType" class="form-label"><b>House Type</b></label>
                                <select class="form-select" id="houseType">
                                    <option selected>Select house type</option>
                                    <option value="1">One</option>
                                    <option value="2">Two</option>
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <!-- Third row: Search and File Upload -->
                            <div class="col-md-6">
                                <label for="search" class="form-label"><b>House No.</b></label>
                                <input type="text" class="form-control" id="search" placeholder="Enter search term">
                            </div>
                            <div class="col-md-6">
                                <label for="fileUpload" class="form-label"><b>DocumentFile</b></label>
                                <input type="file" class="form-control" id="fileUpload" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label for="workingType" class="form-label"><b>Working Type</b></label>
                                <select class="form-select" id="workingType">
                                    <option selected>Select</option>
                                    <option value="1">One</option>
                                    <option value="2">Two</option>
                                </select>
                            </div>
                            <div class="col-md-4 text-end">
                                <label class="form-label">&nbsp;</label> <!-- For spacing consistency -->
                                <button type="button" class="btn btn-primary d-block">DownloadExample</button>
                            </div>
                        </div>

                        <!-- Close Button -->
                        <div class="d-flex justify-content-end">
                            <button type="button" class="btn btn-primary me-2" data-bs-dismiss="modal">Upload</button>
                            <button type="button" class="btn btn-danger me-2" data-bs-dismiss="modal">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</body>


<div class="container my-3">
    <div class="card">
        <div class="card-body">
            <form method="get" asp-action="Index">
                <p>
                    <a asp-action="Index" class="btn btn-primary mb-3">All Items</a>
                    <a class="btn btn-success mb-3" asp-action="Create">Create New</a>
                    <input type="search"
                           placeholder="Enter zone block building amount"
                           value="@ViewData["Getemployeedetails"]"
                           name="Empsearch"
                           class="form-control form-control-sm"
                           style="width: 250px; padding: 5px; font-size: 14px;" />
                </p>
            </form>

            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            BoqNo
                        </th>
                        <th>
                            Zones
                        </th>
                        <th>
                            Blocks
                        </th>
                        <th>
                           Building
                        </th>
                        <th>
                            House
                        </th>
                        <th>
                            WorkingType
                        </th>
                        <th>
                        Amount
                        </th>
                        <th>
                         TransactionData
                        </th>
                        <th>
                           TransBy
                        </th>
                        <th>
                            TransRef
                        </th>
                        <th>
                           Reference
                        </th>
                        <th>
                          BoqStatus
                        </th>
                        <th>
                            ReviseCount
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.BoqNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Zones)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Blocks)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Building)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.House)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.WorkingType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Amount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TransactionData)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TransBy)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TransRef)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Reference)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BoqStatus)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReviseCount)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



@Html.PagedListPager(Model, page => Url.Action("index", "BoqWorkingType",
             new { page = page }),
                            new PagedListRenderOptions
                        {
                            LiElementClasses = new string[] { "page-item" },
                            PageClasses = new string[] { "page-link" }
                        })