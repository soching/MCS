@model IPagedList<Group_Task.Models.BoqDetail>
@using X.PagedList;
@using X.PagedList.Mvc.Core;
@using X.PagedList.Mvc.Core.Common;

@{
    ViewData["Title"] = "Index";
}

<div class="page-bar">
    <div class="page-breadcrumb">
        <a class="fw-bold font-dark text-dark " asp-controller="Home">Home</a> |
        <a class="fw-bold font-dark text-dark " asp-controller="ItemType">Item Type</a>
    </div>
    <div class="page-toolbar">
        <i class="bi-calendar-day me-2"></i>
        <span class="thin text-uppercase hidden-xs">August 20, 2024 - September 18, 2024</span>
    </div>
</div>

<body>
    <header class="my-3" style="border: 1px solid gray;">
        <div class="top text-dark p-3 mb-3">
            <h4><b>+BOQ Detail Report</h4>
        </div>
        <hr />

        <form>
            <!-- First row: BOQ No., Zone, and Block -->
            <div class="row mb-3">
                <div class="col-md-4">
                    <label for="boqNo" class="form-label"><b>BOQ No.</b></label>
                    <input type="text" class="form-control" id="boqNo" placeholder="Enter BOQ number">
                </div>
                <div class="col-md-4">
                    <label for="zone" class="form-label"><b>Zone</b></label>
                    <select class="form-select" id="zone">
                        <option selected>Select zone</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="block" class="form-label"><b>Block</b></label>
                    <input type="text" class="form-control" id="block" placeholder="Enter block number">
                </div>
            </div>

            <!-- Second row: Building, House, and House Type -->
            <div class="row mb-3">
                <div class="col-md-4">
                    <label for="building" class="form-label"><b>Building</b></label>
                    <input type="text" class="form-control" id="building" placeholder="Enter building">
                </div>
                <div class="col-md-4">
                    <label for="house" class="form-label"><b>House</b></label>
                    <input type="text" class="form-control" id="house" placeholder="Enter house">
                </div>
                <div class="col-md-4">
                    <label for="houseType" class="form-label"><b>House Type</b></label>
                    <input type="text" class="form-control" id="houseType" placeholder="Enter house type">
                </div>
            </div>

            <!-- Third row: House No., Working Type, and Search Button (within the same row) -->
            <div class="row mb-3 align-items-end">
                <div class="col-md-4">
                    <label for="houseNo" class="form-label"><b>House No.</b></label>
                    <input type="text" class="form-control" id="houseNo" placeholder="Enter house number">
                </div>
                <div class="col-md-4">
                    <label for="workingType" class="form-label"><b>Working Type</b></label>
                    <input type="text" class="form-control" id="workingType" placeholder="Enter working type">
                </div>
                <div class="col-md-4 text-end">
                    <button type="button" class="btn btn-outline-primary">Search</button>
                </div>
            </div>
        </form>

    </header>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>



<div class="my-3">
    <div class="card">
        <div class="card-body">
            <form method="get" asp-action="Index">
                <p>
                    <a asp-action="Index" class="btn btn-primary mb-3">All Items</a>
                    <a class="btn btn-success mb-3" asp-action="Create">Create New</a>
                    <input type="search"
                           placeholder="Enter zone block brand"
                           value="@ViewData["Getemployeedetails"]"
                           name="Empsearch"
                           class="form-control form-control-sm"
                           style="width: 250px; padding: 5px; font-size: 14px;" />
                </p>
            </form>

            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            BoqNo
                        </th>
                        <th>
                            Project
                        </th>
                        <th>
                            Zones
                        </th>
                        <th>
                            Blocks
                        </th>
                        <th>
                            Building
                        </th>
                        <th>
                           HouseNo
                        </th>
                        <th>
                            HouseType
                        </th>
                        <th>
                            MainWorkingType
                        </th>
                        <th>
                            WorkingType
                        </th>
                        <th>
                            ItemCode
                        </th>
                        <th>
                            DescriptionKh
                        </th>
                        <th>
                           DescriptionEn
                        </th>
                        <th>
                            Brand
                        </th>
                        <th>
                           BoqQty
                        </th>
                        <th>
                            AdditionalQty
                        </th>
                        <th>
                            Uom
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.BoqNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Project)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Zones)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Blocks)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Building)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HouseNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HouseType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MainWorkingType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.WorkingType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ItemCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DescriptionKh)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DescriptionEn)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Brand)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BoqQty)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AdditionalQty)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Uom)
                            </td>
                         <!--   <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                         -->
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



@Html.PagedListPager(Model, page => Url.Action("index", "ItemTypes",
         new { page = page }),
                        new PagedListRenderOptions
                    {
                        LiElementClasses = new string[] { "page-item" },
                        PageClasses = new string[] { "page-link" }
                    })











