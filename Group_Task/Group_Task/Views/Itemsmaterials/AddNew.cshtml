<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New BOQ</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>

  <header class="container my-3 d-flex">
    <div class="container my-3" style="border: 1px solid gray; max-width: 600px;">
        <h4 class="d-flex justify-content-center alert-light align-items-center">Item Info</h4>
        <form>
            <style>
                /* Ensures alignment for all form inputs */
                .short-input, .medium-input {
                    width: 100%; /* Take full width of the column for better alignment */
                }
            </style>

            <!-- First row: Item Type and Material Type -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="itemType" class="form-label"><b>Item Type</b></label>
                    <select class="form-select form-select-sm short-input" id="itemType">
                        <option selected>Select item type</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label for="materialType" class="form-label"><b>Material Type</b></label>
                    <select class="form-select form-select-sm medium-input" id="materialType">
                        <option selected>Select material type</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                    </select>
                </div>
            </div>

            <!-- Second row: Item Group and Item Code -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="itemGroup" class="form-label"><b>Item Group</b></label>
                    <select class="form-select form-select-sm short-input" id="itemGroup">
                        <option selected>Select item group</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label for="itemCode" class="form-label"><b>Item Code</b></label>
                    <input type="text" class="form-control form-control-sm short-input" id="itemCode" placeholder="Enter item code">
                </div>
            </div>

            <!-- Third row: Material Type and Supplier Code -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="materialTypeInput" class="form-label"><b>Material Type</b></label>
                    <input type="text" class="form-control form-control-sm short-input" id="materialTypeInput" placeholder="Enter material type">
                </div>
                <div class="col-md-6">
                    <label for="supplierCode" class="form-label"><b>Supplier Code</b></label>
                    <input type="text" class="form-control form-control-sm medium-input" id="supplierCode" placeholder="Enter supplier code">
                </div>
            </div>

            <!-- Fourth row: Description KH and Description -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="descriptionKH" class="form-label"><b>Description KH</b></label>
                    <input type="text" class="form-control form-control-sm short-input" id="descriptionKH" placeholder="Enter description in KH">
                </div>
                <div class="col-md-6">
                    <label for="description" class="form-label"><b>Description</b></label>
                    <input type="text" class="form-control form-control-sm medium-input" id="description" placeholder="Enter description">
                </div>
            </div>

            <!-- Fifth row: Measurement and Cost -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="measurement" class="form-label"><b>Measurement</b></label>
                    <input type="text" class="form-control form-control-sm short-input" id="measurement" placeholder="Enter measurement">
                </div>
                <div class="col-md-6">
                    <label for="cost" class="form-label"><b>Cost</b></label>
                    <input type="text" class="form-control form-control-sm medium-input" id="cost" placeholder="Enter cost">
                </div>
            </div>

            <!-- Sixth row: Alert QTY and Status -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="alertQty" class="form-label"><b>Alert QTY</b></label>
                    <input type="text" class="form-control form-control-sm short-input" id="alertQty" placeholder="Enter alert quantity">
                </div>
                <div class="col-md-6">
                    <label for="status" class="form-label"><b>Status</b></label>
                    <input type="text" class="form-control form-control-sm medium-input" id="status" placeholder="Enter status">
                </div>
            </div>

            <!-- Seventh row: Tax and Over Request Qty -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="tax" class="form-label"><b>Tax</b></label>
                    <input type="text" class="form-control form-control-sm short-input" id="tax" placeholder="Enter tax">
                </div>
                <div class="col-md-6">
                    <label for="overRequestQty" class="form-label"><b>Over Request Qty</b></label>
                    <input type="text" class="form-control form-control-sm medium-input" id="overRequestQty" placeholder="Enter over request quantity">
                </div>
            </div>

            <!-- Eighth row: Old Code and Image -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="oldCode" class="form-label"><b>Old Code</b></label>
                    <input type="text" class="form-control form-control-sm medium-input" id="oldCode" placeholder="Enter old code">
                </div>
                <div class="col-md-6 text-center">
                    <img src="..." class="rounded" alt="..." style="max-width: 100%; height: auto;">
                </div>
            </div>

            <!-- Ninth row: Image Selection Button -->
            <div class="row mb-3 justify-content-center">
                <div class="col-md-6 text-center">
                    <!-- Hidden file input -->
                    <input type="file" id="fileInput" style="display: none;" accept="image/*">
                    <!-- Button to trigger file input -->
                    <button type="button" class="btn btn-primary btn-sm mx-2" onclick="document.getElementById('fileInput').click()">Select Image</button>
                    <!-- Remove button -->
                    <button type="button" class="btn btn-danger btn-sm mx-2" id="removeBtn">Remove</button>
                </div>
            </div>
        </form>
    </div>

        <div class="container my-3" style="border: 1px solid gray; max-width: 600px;">
            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="relatedUnit1">
                <label class="form-check-label" for="relatedUnit1">  Enable Multi Brand</label>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Brand Name</th>
                        <th scope="col">Code</th>
                        <th scope="col">Cost</th>
                        <th scope="col">Default</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Table rows will be added here -->
                </tbody>
            </table>

            <div class="unit-of-measurement my-3" style="border: 1px solid gray;">
                <h5>Unit of Measurement</h5>
                <div class="row mb-3">
                    <div class="col-md-6" style="margin:10px;">
                        <label for="umSetName1" class="form-label mb-2"><b>U/M Set Name</b></label>
                        <input type="text" class="form-control form-control-sm medium-input" id="umSetName1" placeholder="Enter U/M set name">
                    </div>
                </div>

                <div class="baseunit my-3" style="border: 1px solid gray; padding: 15px; margin:10px;">
                    <h5>Base Unit</h5>
                    <div class="mb-3">
                        <div class="col-md-6">
                            <label for="baseUnitName" class="form-label mb-2"><b>Name</b></label>
                            <input type="text" class="form-control form-control-sm medium-input" id="baseUnitName" placeholder="Enter base unit name">
                        </div>
                        <div class="col-md-6">
                            <label for="baseUnitAbbreviation" class="form-label mb-2"><b>Abbreviation</b></label>
                            <input type="text" class="form-control form-control-sm medium-input" id="baseUnitAbbreviation" placeholder="Enter abbreviation">
                        </div>
                    </div>
                </div>

                <div class="related-units mb-3" style="border: 1px solid gray; padding: 15px; margin:10px;">
                    <h5>Related Units</h5>
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="relatedUnit1">
                        <label class="form-check-label" for="relatedUnit1"> Enable Multi Unit</label>
                    </div>
                </div>
            </div> 
            
        </div>

    </header>







    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
